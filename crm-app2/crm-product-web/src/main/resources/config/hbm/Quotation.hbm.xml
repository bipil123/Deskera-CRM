<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="com.krawler.crm.database.tables.Quotation" table="quotation">
    <id name="ID">
      <column name="id"/>
      <generator class="assigned"/>
    </id>
    <property name="quotationNumber" type="string">
      <column length="50" name="quotationnumber" not-null="true"/>
    </property>
    <property name="autoGenerated" type="true_false">
      <column default="false" name="autogen" not-null="true"/>
    </property>
    <property name="totalamount" type="double">
      <column length="20" name="totalamount"/>
    </property>
    <property name="quotationDate" type="long">
      <column length="20" name="quotationdate" not-null="true"/>
    </property>
    <property name="dueDate" type="long">
      <column length="20" name="duedate" not-null="true"/>
    </property>
    <property name="customer" type="string">
      <column length="50" name="customer" not-null="true"/>
    </property>
    <property name="moduleid" type="string">
      <column length="50" name="moduleid" not-null="true"/>
    </property>
    <property name="memo" type="string">
      <column length="255" name="memo"/>
    </property>
    <property name="status" type="integer">
      <column name="status" not-null="true" default="0"/>
    </property>
    <property name="deleted" type="true_false">
      <column name="deleteflag" not-null="true"/>
    </property>
    
    <property name="productTax" type="true_false">
      <column name="isproducttax" default="false" not-null="true" />
    </property>
    <property name="taxable" type="true_false">
      <column name="istaxable"  default="false" not-null="true"  />
    </property>
    <property name="perDiscount" type="true_false">
      <column name="perdiscount" default="false" not-null="true"  />
    </property>
    <property name="discount" type="float">
      <column name="discount" />
    </property>
    <property name="discountAmount" type="double">
      <column name="discountamount" />
    </property>
    <property name="taxAmount" type="double">
      <column name="taxamount" />
    </property>
    <many-to-one class="com.krawler.crm.database.tables.Tax" column="tax" name="tax"/>
    <many-to-one class="com.krawler.common.admin.Projreport_Template" name="templateid"/>
    <many-to-one class="com.krawler.common.admin.Company" name="company"/>
    <set cascade="all" inverse="true" name="rows">
      <key column="quotation"/>
      <one-to-many class="com.krawler.crm.database.tables.QuotationDetail"/>
    </set>
  </class>
</hibernate-mapping>
