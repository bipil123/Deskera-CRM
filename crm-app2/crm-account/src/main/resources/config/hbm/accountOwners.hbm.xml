<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="com.krawler.crm.database.tables.accountOwners" table="crm_accountOwners">
    <id name="id" type="java.lang.String">
         <generator class="uuid"></generator>
    </id>
    <many-to-one name="usersByUserid" class="com.krawler.common.admin.User" fetch="select">
        <column name="usersByUserid" not-null="true" />
    </many-to-one>
    <many-to-one name="account" class="com.krawler.crm.database.tables.CrmAccount" fetch="select">
        <column name="accountid" not-null="true" />
    </many-to-one>
    <property name="mainOwner" type="true_false">
        <column name="mainOwner" default="false" not-null="true" />
    </property>
    
    <property name="accountId" type="string" insert="false" update="false">
    	<column name="accountid" />
    </property>

  </class>
</hibernate-mapping>
